# ============================================
# AUTHENTICATION CONFIGURATION
# ============================================
# Microsoft Entra ID (Azure AD) Client ID
VITE_ENTRA_CLIENT_ID=your-client-id-here

# External (CIAM) Tenant ID for external users
VITE_EXTERNAL_TENANT_ID=your-external-tenant-id-here

# Workforce Tenant ID for internal users
VITE_WORKFORCE_TENANT_ID=your-workforce-tenant-id-here

# CIAM Host (Customer Identity Access Management)
VITE_CIAM_HOST=kltdexternaliddev.ciamlogin.com

# Komatsu Portal System URL for SSO
VITE_KPS_URL=https://login-uat.komatsu.com/spa

# OAuth Scopes for login
VITE_LOGIN_SCOPES=User.Read

# Logout mode: "msal-plus-bff" | "msal-only" | "direct"
VITE_LOGOUT_MODE=msal-plus-bff

# Use mock authentication for development (true/false)
VITE_USE_MOCK_AUTH=true

# ============================================
# PORTAL API CONFIGURATION
# ============================================
# Portal API base path
VITE_PORTAL_API_BASE=/api

# Portal API OAuth scope
VITE_PORTAL_API_SCOPE=api://komatsu-apim-portal/.default

# Portal API backend URL (used by Nginx reverse proxy)
PORTAL_API_BACKEND_URL=https://d-apim.developer.azure-api.net

# Default locale for i18n (en, ja, etc.)
VITE_DEFAULT_LOCALE=en

# ============================================
# LOGOUT & REDIRECT CONFIGURATION
# ============================================
# AEM logout URL (leave empty if not using AEM)
VITE_AEM_LOGOUT_URL=

# CDN icon URL (leave empty to use default)
VITE_CDN_ICON=

# Base URL for redirects (leave empty to use window.location.origin)
VITE_BASE_URL=
