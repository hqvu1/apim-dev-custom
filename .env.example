# ============================================
# FRONTEND ENVIRONMENT CONFIGURATION
# ============================================
# Copy to .env.local for local overrides (not committed to git)
#
# Files loaded by Vite (in order):
#   .env.development  - Local dev (npm run dev)
#   .env.production   - Production build (npm run build)
#   .env.local        - Your local overrides (create if needed)

# ============================================
# AUTHENTICATION
# ============================================
VITE_ENTRA_CLIENT_ID=your-client-id-here
VITE_EXTERNAL_TENANT_ID=your-external-tenant-id-here
VITE_WORKFORCE_TENANT_ID=your-workforce-tenant-id-here
VITE_CIAM_HOST=your-ciam-host.ciamlogin.com
VITE_KPS_URL=https://login.example.com/spa
VITE_LOGIN_SCOPES=User.Read
VITE_LOGOUT_MODE=msal-only
VITE_USE_MOCK_AUTH=true
VITE_PUBLIC_HOME_PAGE=true

# ============================================
# API CONFIGURATION
# ============================================
VITE_BFF_URL=http://localhost:3001
VITE_PORTAL_API_BASE=/api
VITE_PORTAL_API_SCOPE=api://your-app/.default
VITE_USE_MOCK_DATA=true

# ============================================
# LOCALIZATION
# ============================================
VITE_DEFAULT_LOCALE=en
