VITE_KPS_URL=https://login-uat.komatsu.com/spa
VITE_LOGIN_SCOPES=User.Read
VITE_LOGOUT_MODE=msal-plus-bff

# STAGING: Disable mock auth
VITE_USE_MOCK_AUTH=false

# STAGING: Enable public home page for testing
# Build-time: used during 'npm run build' for fallback
# Runtime: Override with PUBLIC_HOME_PAGE env var in container
VITE_PUBLIC_HOME_PAGE=true

# ============================================
# PORTAL API CONFIGURATION
# ============================================
# Frontend calls /api which nginx proxies to BFF
# BFF then calls APIM Management API with Managed Identity
VITE_PORTAL_API_BASE=/api
VITE_PORTAL_API_SCOPE=api://komatsu-apim-portal/.default

# ============================================
# LOCALIZATION & BRANDING
# ============================================
VITE_DEFAULT_LOCALE=en
VITE_AEM_LOGOUT_URL=
VITE_CDN_ICON=
